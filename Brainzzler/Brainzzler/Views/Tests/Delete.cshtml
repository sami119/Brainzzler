@model Brainzzler.Models.Test

@{
    Layout = "_Layout";
    ViewData["Title"] = "Изтрий тест";
}

<h3>Сигурни ли сте че искате да изтриете този тест?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Име:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Test_Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Изтрий" class="StartGame" /> |
        <a asp-action="Index">Назад</a>
    </form>
</div>

